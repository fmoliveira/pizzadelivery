<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >
	
	<android.support.v4.view.ViewPager
	    android:id="@+id/pager"
	    android:layout_width="match_parent"
        android:layout_height="280dp" >
	
	    <android.support.v4.view.PagerTitleStrip
	        android:id="@+id/pager_title_strip"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_gravity="top"
	        android:background="#33b5e5"
	        android:paddingBottom="4dp"
	        android:paddingTop="4dp"
	        android:textColor="#fff" />
	
	</android.support.v4.view.ViewPager>

	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
	    android:orientation="vertical" >
	    
	    <TextView
	        android:id="@+id/txtTamanho"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center_horizontal"
	        android:text="Tamanho:"
	        android:textAppearance="?android:attr/textAppearanceMedium" />
	
	    <RadioGroup
	        android:id="@+id/radTamanhoPizza"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center_horizontal" >
	
	        <RadioButton
	            android:id="@+id/tam_pizza_grande"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:checked="true"
	            android:text="Grande" />
	
	        <RadioButton
	            android:id="@+id/tam_pizza_gigante"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:checked="false"
	            android:text="Gigante" />
	    
	    </RadioGroup>
	
	    <TextView
	        android:id="@+id/txtPrecoPizza"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center_horizontal"
	        android:layout_marginTop="10dp"
	        android:text="R$ 50,00"
	        android:textAppearance="?android:attr/textAppearanceMedium" />
	    
	</LinearLayout>

	<LinearLayout
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_gravity="center_horizontal"
	    android:layout_marginTop="15dp" >
	    
	    <Button
	        android:id="@+id/btnAdicionarPizza"
	        android:layout_width="120dp"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center_horizontal"
	        android:layout_marginRight="10dp"
	        android:text="Adicionar Pizza" />
	
	    <Button
	        android:id="@+id/btnEscolherBebidas"
	        android:layout_width="120dp"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center_horizontal"
	        android:layout_marginLeft="10dp"
	        android:text="Escolher Bebidas" />
	
	</LinearLayout>

</LinearLayout>